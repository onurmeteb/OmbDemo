@using EntityLayer.Concrete
@model List<Category>
@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<table class="alert-dark table table-bordered ">
   
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th>Durumu</th>
        <th>Detaylar</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryID</td>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td> <a href="https://www.google.com.tr/" class="btn btn-warning">Detaylar</a> </td>
            <td> <a href="https://www.google.com.tr/" class="btn btn-warning">Sil</a> </td>
        </tr>
    }




</table>